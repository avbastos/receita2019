@model Receita

<div class="col-sm-6 col-lg-6 col-md-6">
    <div class="thumbnail">
        <img src="@Model.Imagem" class="rounded" alt="" width="300" />
    </div>
    <div class="caption">
        <h3>Receita de @Model.Nome</h3>
        <h5>Tempo de Preparo: @Model.TempoDePreparo Minutos </h5>
        <p><h5>Modo de Preparo: </h5><b></b> @Model.ModoDePreparo</p>
    </div>
</div>