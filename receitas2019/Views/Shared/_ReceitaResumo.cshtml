@model Receita

<div class="col-sm-6 col-lg-6 col-md-6">
    <div class="thumbnail">
        <img src="@Model.Imagem" class="rounded" alt="" width="300" />
    </div>
    <div class="caption">
        <h3>@Model.Nome</h3><br />
        <h5><img width="30" height="30" src="~/images/relogio.png"> @Model.TempoDePreparo Min </h5>
        <p><h5>Modo de Preparo: </h5><b></b><textarea cols=70 id="ingredientes" rows="5" style="resize:none; border:hidden; background-color:transparent; text-size-adjust:auto" disabled="disabled">@Model.ModoDePreparo</textarea></p>

    </div>
</div>